<p id="notice"><%= notice %></p>

<h1>Liste des Groupes</h1>

    <% @groups.each do |group| %>
  <div>
      <dl class="panel">
        <dt><h2><%= group.nom %></h2></dt>
        <dd><h3>Salle : <%= group.salle %></h3></dd>
        <dd><h3>Tache : <%= group.tache %></h3></dd>
        <%  @people.each do |p| %>
          <% if group.id == p.group_id %>
          <p><b>Nom:</b>
                <%= best_in_place p, :nom %>
          <% if p.sensei %>
                Appellez moi Sensei!
          <% end %>
            <td><%= best_in_place p, :sensei,  :as => :select, :collection => {"1" => "Sensei", "2" => ""} %></td>
            <br>

          <% end %>
      <% end %>
        <dd><%= link_to 'Show', group %> | <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></dd>
      </dl>
  </div>
    <% end %>

    <button type="button" class="btn btn-default" aria-label="Left Align">
      <%= link_to 'Ajouter un groupe', new_group_path  %>
      <span class="glyphicon glyphicon-sort" aria-hidden="true"></span>
    </button>

    <% if @groups.size < 0 %>
      Cr√©ez deux groupes pour le Random
    <% else %>
      <button type="button" class="btn btn-default" aria-label="Left Align">
        <%= link_to 'Affecter aux groupes', randomize_path  %>
        <span class="glyphicon glyphicon-random" aria-hidden="true"></span>
      </button>
    <% end %>

    <h2>Liste des utilisateurs</h2>

      <dl class="jumbotron">
        <% @people.each do |person| %>
          <% if person.group_id == 0 %>
            <dt><h3><%= person.nom %></h3></dt>
            <dd><h4><%= person.sensei %></h4></dd>
          <% end %>
        <% end %>
      </ul>
